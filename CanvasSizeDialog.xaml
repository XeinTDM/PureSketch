<Window
    x:Class="PureSketch.CanvasSizeDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Canvas Size"
    Width="250"
    Height="138"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None">

    <Grid Margin="10,10,10,5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <TextBlock
                Margin="0,0,10,0"
                VerticalAlignment="Center"
                Text="Width:" />
            <TextBox Name="WidthTextBox" Width="100" />
        </StackPanel>

        <StackPanel
            Grid.Row="1"
            Margin="0,10,0,0"
            Orientation="Horizontal">
            <TextBlock
                Margin="0,0,10,0"
                VerticalAlignment="Center"
                Text="Height:" />
            <TextBox Name="HeightTextBox" Width="100" />

        </StackPanel>

        <Button
            Grid.Row="2"
            Margin="0,12,0,8"
            HorizontalAlignment="Center"
            Click="OnOkClick"
            Content="OK" />
    </Grid>
</Window>